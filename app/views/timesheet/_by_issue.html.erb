<% entry[:issues].to_a.each do |ticket|  %>
  <% unless ticket.nil? %>
  
  <% issue = ticket[0] %>
  <% time_entries = ticket[1] %>

  <h3><%= issue %></h3>

  <table class="list issues">
    <thead>
      <th width="2%">
       <%= link_to image_tag('toggle_check.png'), {}, :onclick => "toggleTimeEntriesSelectionIssue('#{issue.id}'); return false;",
       :title => "#{l(:button_check_all)}/#{l(:button_uncheck_all)}", :class => 'toggle-all' %>      
      </th>
      <th width="8%"><%= l(:label_date) %></th>
      <th width="8%"><%= l(:label_activity) %></th>
      <th width="10%"><%= l(:label_member) %></th>
      <th width="45%"><%= l(:field_comments) %></th>
      <th width="10%"><%= l(:field_hours) %>
      <% Redmine::Hook.call_hook(:plugin_timesheet_views_timesheet_group_header, { }) %>
      <th align="center"></td>
    </thead>
    <tbody>
     <%= render :partial => "issue_time_entries", :collection => time_entries, :as => :time_entry, :locals => {:issue => issue } %>
   </tbody>
  </table>
  <% end %> 
<% end %>

